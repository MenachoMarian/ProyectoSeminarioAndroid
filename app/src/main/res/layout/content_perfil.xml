<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".perfil"
    tools:showIn="@layout/activity_perfil">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:fontFamily="@font/gabriela"
                android:gravity="center"
                android:text="     Usuario"
                android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/btnhomeper"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:backgroundTint="#00F3EDED"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/rombo" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btneditarinformacion"
                android:layout_width="96dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:backgroundTint="#8BCDDC39"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/user" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnProduct"
                android:layout_width="92dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="#6FE91E63"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/goods" />

            <Space
                android:layout_width="21dp"
                android:layout_height="28dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btncitas"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="#7503A9F4"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/clipboard" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/user" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabriela"
                    android:text="Nombre:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtnombredeusuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabriela"
                    android:hint="NOmbre de usuario"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabriela"
                    android:text="Email:" />

                <TextView
                    android:id="@+id/txtemailusuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabriela"
                    android:hint="Email usuario"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabriela"
                    android:text="Contrase침a:" />

                <TextView
                    android:id="@+id/txtcontrase침ausu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gabriela"
                    android:hint="Contrase침a usuario"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btncerrarsesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="#FFEB3B"
            android:fontFamily="@font/gabriela"
            android:text="Cerrar sesi칩n" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>