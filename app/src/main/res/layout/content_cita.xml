<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Cita"
    tools:showIn="@layout/activity_cita">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="399dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtcita"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#F8F8F5"
                    android:fontFamily="@font/gabriela"
                    android:gravity="center"
                    android:text="Registrar Cita"
                    android:textColor="#73737C"
                    android:textSize="24sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gabriela"
                    android:text="Producto: "
                    android:textColor="#FF5722"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtnombrecita"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gabriela"
                    android:gravity="center"
                    android:textColor="#FF5722"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="61dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gabriela"
                    android:text="Cantidad:"
                    android:textColor="#FF5722"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/cantidadcita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/gabriela"
                    android:hint="Inserte la cantidad deseada"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnfecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFC107"
                    android:fontFamily="@font/gabriela"
                    android:text="Fecha: "
                    android:textColor="#151518"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/efecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnhora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFC107"
                    android:fontFamily="@font/gabriela"
                    android:text="Hora: "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ehora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <EditText
                android:id="@+id/txt_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="225dp" />

            <Button
                android:id="@+id/btnregistrocita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFEB3B"
                android:fontFamily="@font/gabriela"
                android:text="Registrar" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>